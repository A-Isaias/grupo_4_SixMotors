      <div class="card-body">
        <table class="table table-responsive-md mb-0">
          <thead>
            <tr>
              <th style="width: 50px">
                <strong>#</strong>
              </th>
              <th class="th-lg">
                <strong>Producto</strong>
              </th>
              <th class="th-lg">
                <strong>Precio</strong>
              </th>
              <th class="text-center">
                <strong>Cantidad</strong>
              </th>
              <th class="text-center">
                <strong>Subtotal</strong>
              </th>
              <th style="width: 50px"></th>
            </tr>
          </thead>
          <tbody class="cartRows"></tbody>
        </table>
        <div class="card-footer text-right">
          <h2>Total: <span class="totalAmount">$ 0</span></h2>
        </div>
      </div>
      <div class="carrito-acciones">
        <div class="carrito-acciones-izquierda">
          <button class="carrito-acciones-vaciar">Vaciar carrito</button>
        </div>
        <div class="carrito-acciones-derecha">
          <div class="carrito-acciones-total">
            <div class="card-footer text-right">
              <h2>Total: <span class="totalAmount">$ 0</span></h2>
            </div>
          </div>
          <button class="carrito-acciones-comprar">Comprar ahora</button>
        </div>
      </div>
      <div class="card">
        <div class="card-header text-center">Terminar la compra</div>
        <form class="card-body" id="checkoutCart">
          <div class="row">
            <div class="col-md-6 mb-4">
              <label for="country">Tipo Envio</label>
              <select
                class="custom-select d-block w-100"
                id="shippingMethod"
                name=" shippingMethod"
                required=""
              >
                <option value="">Elegir...</option>
                <option value="Cadete">Cadete</option>
                <option value="Correo">Correo Argentino</option>
                <option value="Andreani">Andreani</option>
                <option value="DHL">DHL</option>
              </select>
              <div class="invalid-feedback">Elija un tipo de envio.</div>
            </div>
            <div class="col-md-6 mb-4">
              <label for="country">Pago</label>
              <select
                class="custom-select d-block w-100"
                id="paymentMethod"
                name="paymentMethod"
                required=""
              >
                <option value="">Elegir...</option>
                <option value="Efectivo">Efectivo</option>
                <option value="Débito">Tarjeta Débito</option>
                <option value="Crédito">Tarjeta Crédito</option>
              </select>
              <div class="invalid-feedback">Elija un tipo de envio.</div>
            </div>
          </div>
          <button
            class="btn btn-primary btn-lg btn-block waves-effect waves-light"
            type="submit"
          >
            Comprar
          </button>
        </form>
      </div>
