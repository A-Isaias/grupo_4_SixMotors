      <% function cargaRandom(array) { %> <% for (let i = array.length - 1; i >
      0; i--) { %> <% const j = Math.floor(Math.random() * (i + 1)); %> <%
      [array[i], array[j]] = [array[j], array[i]]; %> <% } %> <% return array;
      %> <% } %>

      <section id="autos-venta" class="autos-venta">
        <div class="autos">
          <div class="autos-0km autos-cont">
            <div class="titulo">
              <h3>Autos 0km</h3>
              <a href="/autos">
                <p>Ver mas</p>
              </a>
            </div>
            <div class="slider">
              <div class="swiper-container">
                <div class="swiper-wrapper">
                  <% const cargaAutos0k = cargaRandom(datosAutos); %> <% for
                  (let i = 0; i < 7 && i < cargaAutos0k.length; i++) { %>
                  <div class="swiper-slide">
                    <a href="/DetailsAutos/<%= cargaAutos0k[i].id %>">
                      <div class="img-container">
                        <img src="<%= cargaAutos0k[i].img %>" alt="" />
                        <h6><%= cargaAutos0k[i].title %></h6>
                      </div>
                    </a>
                  </div>
                  <% } %>
                </div>
                <!-- pagination -->
                <div class="swiper-pagination"></div>
              </div>
            </div>
          </div>

          <div class="autos-usados autos-cont">
