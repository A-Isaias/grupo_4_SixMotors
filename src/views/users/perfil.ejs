<!DOCTYPE html>
<html lang="en">
  <head>
    <title>usuario</title>
    <%- include ('../partials/head.ejs') %>

    <link rel="stylesheet" href="/css/style-usuario.css" />
  </head>
  <body>
    <!-- Navbar -->
    <%- include ('../partials/header.ejs') %>

    <main>
      <section class="usuario">
        <div class="wrapper">
          <div class="left">
            <img
              src="/images/users/<%= locals.userLogged.img %>"
              alt="usuario"
              width="100"
              id="profile-image"
            />

            <div class="editar">
              <a href="/user/edit/<%= locals.userLogged.id %>">
                <i class="fa-solid fa-pencil"></i>
              </a>
            </div>

            <h4>
              <%= locals.userLogged.name %> <%= locals.userLogged.lastname %>
            </h4>
            <div class="info">
              <h3>Informacion</h3>
              <div class="info_data">
                <div class="data">
                  <h5>Email</h5>
                  <p><%= locals.userLogged.email %></p>
                </div>
                <div class="data">
                  <h5>Telefono</h5>
                  <p><%= locals.userLogged.cel %></p>
                </div>
                <div class="data">
                  <h5>Ciudad</h5>
                  <p><%= locals.userLogged.country %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="right">
            <div class="favoritos">
              <h3>Favoritos</h3>
              <div class="favoritos_data">
                <i id="left" class="fa-solid fa-angle-left"></i>
                <div class="carrusel">
                  <div class="contenidio">
                    <img src="/images/autopartes/bateria.jpg" alt="" />
                    <h3>Titulo</h3>
                    <p>Precio</p>
                  </div>
                </div>
                <i id="right" class="fa-solid fa-angle-right"></i>
              </div>
            </div>
            <div class="card-header">Mis Pedidos</div>
            <div class="card-body">
              <% if (orders !== null && orders !== undefined) { %>
              <div class="table-container">
                <table class="table">
                  <thead>
                    <tr>
                      <th style="width: 50px">
                        <strong>#</strong>
                      </th>
                      <th class="th-lg">
                        <strong>Fecha</strong>
                      </th>
                      <th class="th-lg">
                        <strong>Envío</strong>
                      </th>
                      <th class="th-lg">
                        <strong>Pago</strong>
                      </th>
                      <th>
                        <strong>Total</strong>
                      </th>
                      <th style="width: 50px"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% orders.forEach((order, index) => { %>
                    <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td>
                        <%= new Intl.DateTimeFormat('es-ES', { year: 'numeric' ,
                        month: 'numeric' , day: '2-digit' ,hour: 'numeric' ,
                        minute: 'numeric' }).format(order.createdAt) %>
                      </td>
                      <td><%= order.shippingMethod %></td>
                      <td><%= order.paymentMethod %></td>
                      <td>$ <%= order.total %></td>
                      <td>
                        <a
                          class="btn btn-warning btn-sm"
                          href="<%= `/order/${order.id}` %> "
                          ><i class="fas fa-eye"></i
                        ></a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
              <p>No hay órdenes disponibles.</p>
              <% } %>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <%- include ('../partials/footer.ejs') %> <%- include('../partials/scripts')
    %>
    <script type="module" src="/javascript/usuario.js"></script>
  </body>
</html>
