<!DOCTYPE html>
<html lang="en">
  <head>
    <title>SixMotors || Ordenes</title>
    <%- include('../partials/head') %>
    <!-- estilos -->
    <link rel="stylesheet" href="/css/style-order.css" />
  </head>

  <body>
    <%- include('../partials/header') %>
    <main class="mt-5 pt-4">
      <div class="container">
        <h2 class="tituPedido">Pedido Nro <%= order.id %></h2>
        <div class="cardPedido">
          <div class="card-body">
            <table class="tablePedido">
              <thead>
                <tr>
                  <th style="width: 50px">
                    <strong>#</strong>
                  </th>
                  <th class="th-lg">
                    <strong>Producto</strong>
                  </th>
                  <th class="th-lg">
                    <strong>Precio</strong>
                  </th>
                  <th class="text">
                    <strong>Cantidad</strong>
                  </th>
                  <th class="text">
                    <strong>Subtotal</strong>
                  </th>
                </tr>
              </thead>
              <tbody class="cartRows">
                <% for( let i=0; i < order.orderItems.length; i++ ) { %>
                <tr>
                  <th scope="row"><%= i + 1 %></th>
                  <td><%= order.orderItems[i].name %></td>
                  <td>$ <%= order.orderItems[i].price%></td>
                  <td class="text-center">
                    <%= order.orderItems[i].quantity%>
                  </td>
                  <td class="text-center">
                    $ <%= order.orderItems[i].price *
                    order.orderItems[i].quantity%>
                  </td>
                </tr>

                <% } %>
              </tbody>
            </table>
            <div class="card-footer text-right">
              <h2>
                Total: <span class="totalAmount">$ <%= order.total %> </span>
              </h2>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header">Detalles de la compra</div>
          <div class="card-body" id="checkoutCart">
            <div class="row">
              <div class="col">
                <p class="mb">
                  <strong>Tipo Envio:</strong>
                  <%= order.shippingMethod %>
                </p>
              </div>
              <div class="col">
                <p class="mb">
                  <strong>Pago:</strong>
                  <%= order.paymentMethod %>
                </p>
              </div>
            </div>
            <div class="card-footer">
              <a href="/user/profile" class="btnPedidos"
                >Volver a mis pedidos</a
              >
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('../partials/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
